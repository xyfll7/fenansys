{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "分案系统调试",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "serve调试",
      "runtimeExecutable": "export NODE_ENV=development && nodemon",
      "program": "${workspaceFolder}/server/serve/serve.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "login调试",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server/login/login.js",
      "restart": true
      // "console": "integratedTerminal",
      // "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "tsserver调试",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/LEARN/tsserver/dist/server.js",
      "restart": true
      // "console": "integratedTerminal",
      // "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "mongodb调试",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/LEARN/mongodb/dist/server.js",
      "restart": true
      // "console": "integratedTerminal",
      // "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "go调试",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/LEARN/go/main.go"
    }
  ]
}
